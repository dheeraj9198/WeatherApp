<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:title="@string/location_key"
        android:key="@string/location_key"
        android:defaultValue="@string/default_location"
        android:inputType="text"
        android:singleLine="true"
        />

    <ListPreference
        android:title="@string/temperature_key"
        android:key="@string/temperature_key"
        android:defaultValue="@string/temperature_celsius"
        android:entries="@array/temp_options"
        android:entryValues="@array/temp_values"
        />
</PreferenceScreen>
